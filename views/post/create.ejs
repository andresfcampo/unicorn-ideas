<h2>What's the next unicorn?</h2>
<form action="/post/create" method="post">
<div class="card">
  <div class="card-header">
    Share your unicorn with the world
  </div>
  <div class="card-body">
    <input type="text" name="idea" required placeholder="Unicorn name"/>
    <div>
      <label for="industry">Choose an Industry:</label>
      <select id="industry" name="industry">
        <option value="ecommerce">Ecommerce</option>
        <option value="edutech">Edutech</option>
        <option value="fintech">Fintech</option>
        <option value="healthtech">Healthtech</option>
        <option value="healthtech">Marketplace</option>
        <option value="web3">Web3</option>
      </select>
    </div>
    <div class="card-body">
      <textarea id="description" name="description" rows="4" cols="50" placeholder="Max 280 Characters"></textarea>
    </div>
    <button type="submit" class="btn btn-primary"> Submit </button>
  </div>
</div>
</form>
