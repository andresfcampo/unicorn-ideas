<h1>Update post</h1>
<form action="/post/updatePost/<%=post.id%>?_method=PUT" method="post">
<div class="card">
  <div class="card-header">
    Share your unicorn with the world
  </div>
  <div class="card-body">
    <input type="text" name="idea" required placeholder="Unicorn name" value="<%=post.idea%>"/>
    <div>
      <label for="industry">Choose an Industry:</label>
      <select id="industry" name="industry">
        <option value="ecommerce">Ecommerce</option>
        <option value="edutech">Edutech</option>
        <option value="fintech">Fintech</option>
        <option value="healthtech">Healthtech</option>
        <option value="marketplace">Marketplace</option>
        <option value="social">Social</option>
        <option value="web3">Web3</option>
      </select>
    </div>
    <div class="card-body">
      <textarea id="description" name="description" rows="4" cols="50" placeholder="Max 280 Characters"><%=post.description%></textarea>
    </div>
    <button type="submit" class="btn btn-primary"> Submit </button>
  </div>
</div>
</form>